<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Nom du vaisseau"/></h1>
      <div class="flexrow">
        <div class="resource flexcol">
          <label for="system.type" class="resource-label">Type</label>
          <input type="text" name="system.type" value="{{system.type}}" data-dtype="String"/>
        </div>
        <div class="resource flexcol">
          <label for="system.taille" class="resource-label">Taille</label>
          <input type="text" name="system.taille" value="{{system.taille}}" data-dtype="String"/>
        </div>
        <div class="resource flexcol">
          <label for="system.origine" class="resource-label">Origine</label>
          <input type="text" name="system.origine" value="{{system.origine}}" data-dtype="String"/>
        </div>
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="statistiques">Statistiques</a>
    <a class="item" data-tab="modules">Modules & Armes</a>
    <a class="item" data-tab="equipage">Équipage</a>
    <a class="item" data-tab="description">Description</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Statistiques Tab --}}
    <div class="tab statistiques" data-group="primary" data-tab="statistiques">
      
      {{!-- Ressources principales --}}
      <div class="ship-stats">
        <div class="ship-stat">
          <label for="system.pc.value">{{localize "UB.Vaisseau.pc"}}:</label>
          <div class="resource-bar">
            <input type="number" name="system.pc.value" value="{{system.pc.value}}" data-dtype="Number" min="0" max="{{system.pc.max}}"/>
            <span>/</span>
            <input type="number" name="system.pc.max" value="{{system.pc.max}}" data-dtype="Number" min="1"/>
            <div class="health-bar">
              <div class="health-fill" style="width: {{system.pc.pourcentage}}%"></div>
            </div>
          </div>
        </div>
        
        <div class="ship-stat">
          <label for="system.pe.value">{{localize "UB.Vaisseau.pe"}}:</label>
          <div class="resource-bar">
            <input type="number" name="system.pe.value" value="{{system.pe.value}}" data-dtype="Number" min="0" max="{{system.pe.max}}"/>
            <span>/</span>
            <input type="number" name="system.pe.max" value="{{system.pe.max}}" data-dtype="Number" min="1"/>
          </div>
        </div>
      </div>

      {{!-- Seuils de dégâts --}}
      <div class="damage-thresholds">
        <h3>Seuils de Dégâts</h3>
        <div class="thresholds-grid">
          <div class="threshold">
            <label>100% - Optimal:</label>
            <span>{{system.seuils.optimal}}</span>
          </div>
          <div class="threshold">
            <label>75% - Dégâts légers:</label>
            <span>{{system.seuils.leger}} (-1 Maniabilité)</span>
          </div>
          <div class="threshold">
            <label>50% - Dégâts moyens:</label>
            <span>{{system.seuils.moyen}} (-1 Précision, Vitesse réduite)</span>
          </div>
          <div class="threshold">
            <label>25% - État critique:</label>
            <span>{{system.seuils.critique}} (Systèmes défaillants)</span>
          </div>
        </div>
      </div>

      {{!-- Caractéristiques du vaisseau --}}
      <div class="ship-characteristics">
        <h3>Caractéristiques</h3>
        <div class="characteristics-grid">
          <div class="characteristic">
            <label for="system.maniabilite">{{localize "UB.Vaisseau.maniabilite"}}:</label>
            <input type="number" name="system.maniabilite" value="{{system.maniabilite}}" data-dtype="Number"/>
          </div>
          <div class="characteristic">
            <label for="system.vitesse">{{localize "UB.Vaisseau.vitesse"}}:</label>
            <input type="text" name="system.vitesse" value="{{system.vitesse}}" data-dtype="String"/>
          </div>
          <div class="characteristic">
            <label for="system.equipageConseille">{{localize "UB.Vaisseau.equipage"}}:</label>
            <input type="number" name="system.equipageConseille" value="{{system.equipageConseille}}" data-dtype="Number"/>
          </div>
        </div>
      </div>

      {{!-- Boucliers --}}
      <div class="shields-section">
        <h3>{{localize "UB.Vaisseau.boucliers"}}</h3>
        <div class="shield-info">
          <label>Réduction par point d'énergie dépensé:</label>
          <input type="number" name="system.boucliers.reduction" value="{{system.boucliers.reduction}}" data-dtype="Number" min="1"/>
          <span>dégâts</span>
        </div>
        <div class="shield-overcharge">
          <label>
            <input type="checkbox" name="system.boucliers.surcharge" {{checked system.boucliers.surcharge}}/>
            Surcharge possible
          </label>
        </div>
      </div>
    </div>

    {{!-- Modules & Armes Tab --}}
    <div class="tab modules" data-group="primary" data-tab="modules">
      
      {{!-- Modules installés --}}
      <div class="items-section">
        <header class="items-header">
          <h3>Modules Installés</h3>
          <a class="item-control item-create" data-type="module" title="Ajouter un module">
            <i class="fas fa-plus"></i>
          </a>
        </header>
        
        <div class="module-list">
          {{#each modules as |item id|}}
          <div class="module-card" data-item-id="{{item._id}}">
            <div class="module-header">
              <h4>{{item.name}}</h4>
              <div class="item-controls">
                <a class="item-control item-edit" title="Éditer">
                  <i class="fas fa-edit"></i>
                </a>
                <a class="item-control item-delete" title="Supprimer">
                  <i class="fas fa-trash"></i>
                </a>
              </div>
            </div>
            <p class="module-description">{{item.system.description}}</p>
            {{#if item.system.coutPA}}
            <div class="module-cost">Coût: {{item.system.coutPA}} PE</div>
            {{/if}}
          </div>
          {{/each}}
        </div>
      </div>

      {{!-- Armes intégrées --}}
      <div class="items-section">
        <header class="items-header">
          <h3>Armes Intégrées</h3>
          <a class="item-control item-create" data-type="arme" title="Ajouter une arme">
            <i class="fas fa-plus"></i>
          </a>
        </header>
        
        <ol class="items-list">
          {{#each armes as |item id|}}
          <li class="item flexrow" data-item-id="{{item._id}}">
            <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></div>
            <h4 class="item-name">{{item.name}}</h4>
            <div class="weapon-stats">
              <span class="stat">{{item.system.degats}} {{item.system.typeDegats}}</span>
              <span class="stat">{{localize (concat "UB.Portees." item.system.portee)}}</span>
            </div>
            <div class="item-controls">
              <a class="item-control weapon-attack" title="Tirer">
                <i class="fas fa-crosshairs"></i>
              </a>
              <a class="item-control item-edit" title="Éditer">
                <i class="fas fa-edit"></i>
              </a>
              <a class="item-control item-delete" title="Supprimer">
                <i class="fas fa-trash"></i>
              </a>
            </div>
          </li>
          {{/each}}
        </ol>
      </div>
    </div>

    {{!-- Équipage Tab --}}
    <div class="tab equipage" data-group="primary" data-tab="equipage">
      <div class="crew-positions">
        <h3>Postes de Commande</h3>
        
        <div class="position">
          <label for="system.postes.pilote">Pilote:</label>
          <input type="text" name="system.postes.pilote" value="{{system.postes.pilote}}" data-dtype="String"/>
        </div>
        
        <div class="position">
          <label for="system.postes.artilleur">Artilleur:</label>
          <input type="text" name="system.postes.artilleur" value="{{system.postes.artilleur}}" data-dtype="String"/>
        </div>
        
        <div class="position">
          <label for="system.postes.mecanicien">Mécanicien:</label>
          <input type="text" name="system.postes.mecanicien" value="{{system.postes.mecanicien}}" data-dtype="String"/>
        </div>
        
        <div class="position">
          <label for="system.postes.tacticien">Officier tactique:</label>
          <input type="text" name="system.postes.tacticien" value="{{system.postes.tacticien}}" data-dtype="String"/>
        </div>
      </div>

      <div class="crew-notes">
        <h3>Notes sur l'équipage</h3>
        <textarea name="system.equipageNotes" rows="5">{{system.equipageNotes}}</textarea>
      </div>
    </div>

    {{!-- Description Tab --}}
    <div class="tab description" data-group="primary" data-tab="description">
      <div class="ship-description">
        <h3>Description du Vaisseau</h3>
        {{editor system.description target="system.description" button=true owner=owner editable=editable}}
      </div>
      
      <div class="ship-history">
        <h3>Historique</h3>
        {{editor system.historique target="system.historique" button=true owner=owner editable=editable}}
      </div>

      <div class="capacites-speciales">
        <h3>Capacités Spéciales</h3>
        <textarea name="system.capacitesSpeciales" rows="4">{{system.capacitesSpeciales}}</textarea>
      </div>
    </div>

  </section>
</form>